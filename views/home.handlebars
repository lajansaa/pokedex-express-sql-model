<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Online Pokedex</title>
</head>
<body>
  <h1>Welcome back to the online Pokedex{{#if loggedIn }}, {{username}}{{/if}}!</h1>
  
  {{#if loggedIn }}
    <form method="GET" action="/users/{{userid}}">
      <button type="submit">Account Info</button>
    </form>
    <form method="POST" action="/users/logout">
      <button type="submit">Logout</button>
    </form>
  {{else}}
    <form method="GET" action="/users/login">
      <button type="submit">Login</button>
    </form>
  {{/if}}
  {{#each pokemon}}
    <li>{{this.name}}</li>
  {{/each}}
</body>
</html>
